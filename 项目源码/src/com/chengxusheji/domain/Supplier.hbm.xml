<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Supplier" table="t_Supplier">

          <!-- 主键供应商id -->
          <id name="supplierId" column="supplierId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 供应商名称 -->
          <property
            name="supplierName"
            column="supplierName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 联系人 -->
          <property
            name="connectPerson"
            column="connectPerson"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 传真 -->
          <property
            name="fax"
            column="fax"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 供应商地址 -->
          <property
            name="address"
            column="address"
            type="string"
            length="90"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
